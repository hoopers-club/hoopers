---

let frontpage = Astro.fetchContent('../pages/posts/frontpage/*.md');

---

	<section class="courts">
			<div class="title">
				<img class="line left-i" src="/assets/Homepage/section line.svg" alt="line" />
				<div class="title-section right-i">courts</div>
			</div>
			<div class="content">
				<div class="content-left">
					<img class="down-i" src={frontpage[0]?.courtImage} alt="" />
				</div>
				<div class="content-right">
					<div class="text fonte-creditos down-i">
					{frontpage[0]?.courtDescription}
					</div>
					<div class="buttons condensed down-i">Our Courts</div>
				</div>
			</div>
		</section>

