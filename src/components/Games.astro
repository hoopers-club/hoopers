---
let games = Astro.fetchContent('../pages/posts/summergallery/*.md');
games=games.sort((a,b)=>new Date(a.time)-new Date(b.time));

console.log(games)
---

		 <section class="articles black" style="min-height:0;">
			<div class="articles-featured">
				<div class="esport-title">Schedule</div>
				<img
					class="featured-line"
					src="/assets/articles/linha.svg"
					alt="line"
				/>
			</div>
			<div class="schedule-list">
            {games?.map(game =>(

            <div class="schedule-item">
					<div class="match">{game?.teamA} X {game?.teamB}</div>
					<div class="match-secondary">
						<div class="time">{`${new Date(game.time).getDay()}/${new Date(game.time).getMonth()} - ${new Date(game.time).getHours()}H${new Date(game?.time).getMinutes()=='00'?'':new Date(game?.time).getMinutes()} `}</div>
						<div class="match-location">{game?.location}</div> 
					</div>
				</div>

            ))}


				
				
				
			</div>
		</section>