---
import Bases from '../Layout/Layout.astro';
import SearchResult from '../components/SearchResult.jsx';

const articles = await Astro.fetchContent('./posts/articles/*.md');
---

<Bases>

	<div class="search-page">
		<div class="search-query" >Your results for '<span id="key"></span>'</div>

	</div>

	<script>

		const searched = sessionStorage.getItem('SEARCH');
		const key=document.getElementById('key');
		key.innerHTML=searched;

	</script>

	<SearchResult articles={articles} client:load/>

</Bases>
