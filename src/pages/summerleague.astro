<script>

function slide(direction){
    var container = document.getElementById('gallery');
    scrollCompleted = 0;
    var slideVar = setInterval(function(){
        if(direction == 'left'){
            container.scrollLeft -= 90;
        } else {
            container.scrollLeft += 90;
        }
         scrollCompleted += 10; 
        if(scrollCompleted >= 80){
            window.clearInterval(slideVar);
        }
    }, 50);
}

